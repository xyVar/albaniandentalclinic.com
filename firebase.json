{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "_docs/**",
      "_config/**"
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Cross-Origin-Opener-Policy",
            "value": "same-origin-allow-popups"
          },
          {
            "key": "Cross-Origin-Embedder-Policy",
            "value": "unsafe-none"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/facebook",
        "destination": "/facebook.html"
      },
      {
        "source": "/instagram",
        "destination": "/instagram.html"
      },
      {
        "source": "/chi-siamo",
        "destination": "/chi-siamo.html"
      },
      {
        "source": "/about-us",
        "destination": "/chi-siamo.html"
      },
      {
        "source": "/terms",
        "destination": "/terms-conditions.html"
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }
}
